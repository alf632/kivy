#:kivy 1.0.9

#:set dicke 5
#:set hoehe 600
#:set breite 600
#:set radius 50

<BounceBall>:
    size: radius, radius
    canvas:
        Color:
            rgba: 0, 0, 1, .5
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 0, 0, .5
        Line:
            points: self.center_x, self.center_y, self.center_x+self.velocity_x*4, self.center_y+self.velocity_y*7
            width: 3

<Barier>:
    height: self.height
    width: self.width
    canvas:
        Color: 
            rgba: 1, 1, 0, 1
        Rectangle:
            pos: self.x + 20, self.y + 20
            size: self.width - 40 , self.height - 40
<Boundry>:
    size: breite, hoehe
    canvas:
        Color:
            rgba: 1, 1, 1, .5
        Rectangle:
            id: balken_links
            pos: self.center_x - breite/2 , self.center_y - hoehe/2+dicke/2
            size: dicke, hoehe

        Rectangle:
            id: balken_rechts
            pos: self.center_x + breite/2, self.center_y - hoehe/2+dicke/2
            size: dicke, hoehe

        Rectangle:
            id: balken_oben
            pos: self.center_x -breite/2+dicke/2, self.center_y + hoehe/2
            size: breite , dicke

        Rectangle:
            id: balken_unten
            pos: self.center_x -breite/2+dicke/2, self.center_y - hoehe/2
            size: breite , dicke


<BahnGame>:
    ball: bounce_ball    
    debug: debug_label
    boundry: boundry
    barier: barier

    Label:
        id: debug_label
        font_size: 10
        center_x: root.center_x
        text: "0"

    BounceBall:
        id: bounce_ball
        center: self.parent.center

    Boundry:
        id:boundry
        center: self.parent.center

    Barier:
        id:barier
        center: self.parent.center
