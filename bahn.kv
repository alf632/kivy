#:kivy 1.0.9

#:set dicke 5
#:set hoehe 200
#:set breite 600
#:set radius 50

<BounceBall>:
    size: radius, radius
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Boundry>:
    size: breite, hoehe
    canvas:
        Rectangle:
            id: balken_links
            pos: self.center_x - breite/2 , self.center_y - hoehe/2+dicke/2
            size: dicke, hoehe

        Rectangle:
            id: balken_rechts
            pos: self.center_x + breite/2, self.center_y - hoehe/2+dicke/2
            size: dicke, hoehe

        Rectangle:
            id: balken_oben
            pos: self.center_x -breite/2+dicke/2, self.center_y + hoehe/2
            size: breite , dicke

        Rectangle:
            id: balken_unten
            pos: self.center_x -breite/2+dicke/2, self.center_y - hoehe/2
            size: breite , dicke


<BahnGame>:
